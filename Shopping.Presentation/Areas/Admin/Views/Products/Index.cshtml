@using Shopping.Application.Modules.ProductsModule.Queries.ProductGetAllQuery
@model IEnumerable<ProductGetAllRequestDto>
@{
    ViewData["Title"] = "Index";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Bootstrap Basic Tables</h4>
                    <span>
                        lorem ipsum dolor sit amet, consectetur adipisicing
                        elit
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="../index.html"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Bootstrap Table</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Basic Table</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="card">
        <div class="card-header">
            <h5>Basic Table</h5>
            <span>Use class <code>table</code> inside table element</span>
        </div>
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Brand</th>
                            <th>Color</th>
                            <th>Size</th>
                            <th>Material</th>
                            <th>Price</th>
                            <th>Stock Count</th>
                            <th class="operation">
                                <a class="btn btn-sm btn-success" asp-action="Create">
                                    <i class="fa fa-plus"></i>
                                </a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="image-cell">
                                    <img src="@item.ImageUrl" />
                                </td>
                                <td>@item.Title</td>
                                <td>@item.CategoryName</td>
                                <td>@item.BrandName</td>
                                <td style="background-color: @item.HexCode; color: white;">@item.ColorName</td>
                                <td>@item.SizeName - @item.SizeSmallName</td>
                                <td>@item.MaterialName</td>
                                <td>@item.Price</td>
                                <td>@item.StockCount</td>
                                <td class="operation">
                                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <a class="btn btn-sm btn-danger"
                                       asp-action="Remove"
                                       asp-route-id="@item.Id"
                                       data-entity-title="@item.Title" onclick="removeEntity(event)">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section addcss {
    <link href="~/libs/jquery-treegrid/css/jquery.treegrid.min.css" rel="stylesheet" />
    <link href="~/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/libs/sweetalert2/sweetalert2.css" rel="stylesheet" />
}
@section addjs {
    <script src="~/libs/jquery-treegrid/js/jquery.treegrid.min.js"></script>
    <script src="~/libs/sweetalert2/sweetalert2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.tree').treegrid()
                .treegrid('collapseAll');
        });

        function removeEntity(e) {
            e.preventDefault();
            let element = e.currentTarget;

            $(element).attr('disabled', 'disable');

            const link = $(element).attr('href');
            const title = $(element).data('entity-title');


            const bigonSwal = Swal.mixin({
                customClass: {
                    confirmButton: "btn btn-success",
                    cancelButton: "btn btn-danger"
                },
                buttonsStyling: false
            });

            bigonSwal.fire({
                title: `Diqqət`,
                text: `${title} - adli melumatin silmek istediyinizden eminsinizmi??`,
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Bəli",
                cancelButtonText: "Xeyr",
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        url: link,
                        type: 'POST',
                        success: function (response) {
                            alert(`${title} silindi`);

                            window.location.reload();
                        },
                        error: function (errResponse) {
                            console.log(errResponse);
                        }
                    }).always(function () {
                        $(element).removeAttr('disabled').trigger('blur');
                    });


                }
                else {
                    $(element).removeAttr('disabled').trigger('blur');
                    $(document).trigger('click');
                }
            });
        }
    </script>
}